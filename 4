import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Вводим количество элементов
        System.out.print("Введите количество элементов: ");
        int n = scanner.nextInt();

        // Создаем массив для хранения элементов
        int[] numbers = new int[n];

        // Вводим элементы и считаем сумму элементов с четными индексами
        int sum = 0;
        System.out.println("Введите элементы массива:");
        for (int i = 0; i < n; i++) {
            numbers[i] = scanner.nextInt();
            if (i % 2 == 0) {
                sum += numbers[i];
            }
        }

        // Выводим сумму элементов с четными индексами
        System.out.println("Сумма элементов с четными индексами: " + sum);

        // Выводим числа, которые суммировались
        System.out.println("Числа, которые суммировались:");
        for (int i = 0; i < n; i += 2) {
            System.out.println(numbers[i]);
        }
    }
}
